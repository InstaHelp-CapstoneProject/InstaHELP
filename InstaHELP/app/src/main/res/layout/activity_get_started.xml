<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6F09">

    <!-- TextView Selamat Datang -->
    <TextView
        android:id="@+id/selamat_dat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginStart="15dp"
        android:text="@string/selamat_dat"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35sp"
        android:lineSpacingExtra="7sp" />

    <!-- TextView Kami Siap -->
    <TextView
        android:id="@+id/kami_siap_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selamat_dat"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:text="@string/kami_siap_m"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:lineSpacingExtra="4sp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo_1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@id/kami_siap_m"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/instalogo" />

    <!-- Button Get Started -->
    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Get Started"
        android:textColor="#EF6C00"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
