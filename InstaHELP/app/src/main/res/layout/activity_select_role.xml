<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D7DEA8">

    <!-- Header Section -->

    <!-- Content Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FF6F09">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="Selamat datang kembali"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_header_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_header_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Mohon pilih peran anda disini"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Card: Masyarakat -->
        <LinearLayout
            android:id="@+id/card_masyarakat"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_resident" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Masyarakat"
                android:textColor="#FF6F09"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Untuk individu yang ingin melaporkan kejadian"
                android:textColor="#707070"
                android:textSize="12sp" />

            <!-- Toggle Indicator -->
            <View
                android:id="@+id/toggle_masyarakat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/toggle_selector"/>
        </LinearLayout>

        <!-- Card: Instansi -->
        <LinearLayout
            android:id="@+id/card_instansi"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_instansi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Instansi"
                android:textColor="#FF6F09"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Untuk organisasi atau lembaga yang menangani kejadian"
                android:textColor="#707070"
                android:textSize="12sp" />

            <!-- Toggle Indicator -->
            <View
                android:id="@+id/toggle_instansi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/toggle_selector"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Button Section -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:backgroundTint="#FF6F09"
        android:text="Selanjutnya"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

</LinearLayout>
